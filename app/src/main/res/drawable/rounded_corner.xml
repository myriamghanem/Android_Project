<!-- res/drawable/custom_shape.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="0dp" android:right="0dp" android:bottom="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#B4673AB7"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item android:left="0dp" android:right="0dp" android:bottom="0dp" android:top="70dp">

        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <!-- Set radius only for the top corners -->
            <corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp"/>
        </shape>
    </item>
</layer-list>
