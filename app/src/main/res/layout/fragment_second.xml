<!-- res/layout/fragment_second.xml -->

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Top Bar with Yellow Background -->
        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#9F800080"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Dashboard"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Add your navigation elements here if needed -->

        </RelativeLayout>

        <!-- Buttons for Lost and Find -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/topBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="16dp">

            <Button
                android:id="@+id/buttonLost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:text="Lost"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/buttonFind"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Find"
                android:textColor="#000000"
                android:background="@android:color/transparent"
                android:textSize="18sp"/>

        </LinearLayout>

        <!-- User Info and Lost Item Display -->
        <RelativeLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/buttonLayout"
            android:elevation="20dp"
            android:background="@drawable/rounded_corner"> <!-- Add this line to set the elevation for the shadow -->

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:translationZ="4dp" />

            <ImageView
                android:id="@+id/imageViewLostItem"
                android:layout_width="93dp"
                android:layout_height="80dp"
                android:layout_below="@id/textViewUserName"
                android:layout_marginTop="8dp"/>
                 <!-- Use your actual image here -->

            <TextView
                android:id="@+id/textViewLostItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewLostItem"
                android:layout_marginStart="107dp"
                android:layout_marginTop="-53dp"
                android:text="Lost Item Name"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewItemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewLostItemName"
                android:layout_marginTop="29dp"
                android:text="Item Description"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/buttonFound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewItemDescription"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="-32dp"
                android:layout_marginEnd="21dp"
                android:background="@android:color/transparent"
                android:text="Found"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Circular Button for Adding a New Item -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>